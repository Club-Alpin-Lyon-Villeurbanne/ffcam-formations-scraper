{
  "name": "ffcam-formations-adherents-scraper",
  "version": "1.0.0",
  "description": "TypeScript scraper to extract training data and skill levels from FFCAM (French Alpine Club) extranet",
  "scripts": {
    "import": "tsx src/import.ts",
    "import:dry": "tsx src/import.ts --dry-run",
    "import:formations": "tsx src/import.ts --formations",
    "import:brevets": "tsx src/import.ts --brevets",
    "import:niveaux": "tsx src/import.ts --niveaux",
    "import:competences": "tsx src/import.ts --competences",
    "dev": "npm run import:dry",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "author": "Club Alpin Lyon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Club-Alpin-Lyon-Villeurbanne/ffcam-formations-scraper.git"
  },
  "bugs": {
    "url": "https://github.com/Club-Alpin-Lyon-Villeurbanne/ffcam-formations-scraper/issues"
  },
  "homepage": "https://github.com/Club-Alpin-Lyon-Villeurbanne/ffcam-formations-scraper#readme",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "bindings": "^1.5.0",
    "dotenv": "^17.2.1",
    "mysql2": "^3.14.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^4.0.15",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.15"
  }
}
